{
  "compilerOptions": {

    "target": "es2016",

    /* Modules */
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "dist",
    "declaration": true,                       

    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,

    "skipLibCheck": true, /* Skip type checking all .d.ts files. */
  },
  "ts-node": {
    "files": true
  },
  "include": ["src/**/*", "environment.d.ts"],
  "exclude": ["**/*.d.ts"]
}
